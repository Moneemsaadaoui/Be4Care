<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:isScrollContainer="true"
    android:orientation="vertical"
    tools:context=".Views.Fragments.AddDoc.InfoFragment">

    <!-- TODO: Update blank fragment layout -->


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/infoback"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="15dp"
                    android:background="@android:color/transparent"
                    android:drawableLeft="@drawable/lchevron"
                    android:drawableTint="@color/cardview_dark_background"
                    android:text="Retour"
                    android:textColor="@color/space_default_color" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:id="@+id/infocancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_margin="15dp"
                    android:background="@android:color/transparent"
                    android:drawableRight="@android:drawable/ic_menu_close_clear_cancel"
                    android:text="Annuler"
                    android:textColor="@color/space_default_color" />
            </LinearLayout>

            <TextView
                android:id="@+id/label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="15dp"
                android:text="AJOUTER UN DOCUMENT"
                android:textColor="@color/space_default_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/label2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="0dp"
                    android:text="Etape 2"
                    android:textColor="@color/space_default_color"
                    android:textSize="45sp"
                     />

                <Button
                    android:id="@+id/button5"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:background="@drawable/circularbutton" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:id="@+id/infocancel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:isScrollContainer="true"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <View
                        android:id="@+id/view2"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#33000000" />

                    <TextView
                        android:id="@+id/dateLabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:text="Date du Document" />

                    <EditText
                        android:id="@+id/Date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:ems="10"
                        android:hint="03/03/2018"
                        android:inputType="textPersonName"
                        android:text="Non reconnu"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="18sp"
                         />

                    <View
                        android:id="@+id/view21"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#33000000" />

                    <TextView
                        android:id="@+id/ProfsntLaabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:text="Professionel de Santé" />

                    <AutoCompleteTextView
                        android:id="@+id/ProfSnt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:ems="10"
                        android:hint="OCR Failed"
                        android:inputType="textPersonName"
                        android:text="Non reconnu"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="18sp"
                         />

                    <View
                        android:id="@+id/view22"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#33000000" />

                    <TextView
                        android:id="@+id/typedoclabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:text="Type de Document" />

                    <EditText
                        android:id="@+id/Doctype"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:ems="10"
                        android:hint="OCR Failed"
                        android:inputType="textPersonName"
                        android:text="Non reconnu"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="18sp"
                         />

                    <View
                        android:id="@+id/view23"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#33000000" />

                    <TextView
                        android:id="@+id/structsntlabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:text="Structure de Santé" />

                    <AutoCompleteTextView
                        android:id="@+id/StructSnt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:ems="10"
                        android:hint="OCR Failed"
                        android:inputType="textPersonName"
                        android:text="Non reconnu"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="18sp"
                         />

                    <View
                        android:id="@+id/view24"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginRight="15dp"
                        android:background="#33000000" />

                    <TextView
                        android:id="@+id/locationlabel"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:text="Lieu" />

                    <EditText
                        android:id="@+id/Location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:ems="10"
                        android:hint="OCR Failed"
                        android:inputType="textPersonName"
                        android:text="Non reconnu"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="18sp"
                         />

                    <TextView
                        android:id="@+id/locationlabel2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="0dp"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="8dp"
                        android:text="Notes" />

                    <EditText
                        android:id="@+id/Notes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="15dp"
                        android:ems="10"
                        android:hint="OCR Failed"
                        android:inputType="textPersonName"
                        android:text="Non reconnu"
                        android:textColor="@color/cardview_dark_background"
                        android:textSize="18sp"
                         />

                    <Button
                        android:id="@+id/validateinfo"
                        android:layout_width="match_parent"
                        android:layout_height="55dp"
                        android:layout_margin="15dp"
                        android:background="@drawable/circularbutton"
                        android:text="Enregistrer le Document"
                        android:textColor="@android:color/white"
                         />

                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>
